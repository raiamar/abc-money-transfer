@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To ABC Money Transfer</h1>

    <div class="d-flex flex-column align-items-center mt-5">

        <a asp-controller="ExchangeRate" asp-action="ShowAll" class="btn btn-primary btn-lg mb-3 w-50">
            Show All Current Exchange Rates
        </a>

        <a asp-controller="Transaction" asp-action="Create" class="btn btn-success btn-lg mb-3 w-50">
            Create Transaction
        </a>

        <a asp-controller="Transaction" asp-action="Report" class="btn btn-info btn-lg w-50">
            User Report
        </a>

    </div>
